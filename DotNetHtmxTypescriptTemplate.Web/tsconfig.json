{
  "compilerOptions": {
    "target": "es5", // ES5 is widely supported; change based on browser support
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./wwwroot/js" // Output the compiled JS files into wwwroot/js folder
  },
  "include": [
    "src/**/*.ts" // All TypeScript files located in the src folder
  ],
  "exclude": [
    "node_modules"
  ]
}